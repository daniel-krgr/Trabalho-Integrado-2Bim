<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroActivity"
        android:background="@drawable/background">

        <View
            style="@style/ContainerComponents"
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/view" />

        <TextView
            android:id="@+id/tvCadastreSe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/text_cadastro"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <EditText
            android:id="@+id/edNome"
            style="@style/Edit_Text"
            android:hint="Nome"
            android:inputType="text"
            android:textColorHint="@color/cinza"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCadastreSe" />

        <EditText
            android:id="@+id/edEmail"
            style="@style/Edit_Text"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/cinza"
            android:drawableRight="@drawable/ic_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edNome" />


        <EditText
            android:id="@+id/edDataNascimento"
            style="@style/Edit_Text"
            android:hint="Data de nascimento"
            android:inputType="date"
            android:textColorHint="@color/cinza"
            android:drawableRight="@drawable/ic_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edEmail" />

        <EditText
            android:id="@+id/edTelefone"
            style="@style/Edit_Text"
            android:hint="Telefone"
            android:inputType="phone"
            android:textColorHint="@color/cinza"
            android:drawableRight="@drawable/ic_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edDataNascimento" />

        <EditText
            android:id="@+id/edSenha"
            style="@style/Edit_Text"
            android:hint="Senha"
            android:inputType="numberPassword"
            android:textColorHint="@color/cinza"
            android:drawableRight="@drawable/ic_eye"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edTelefone" />

        <EditText
            android:id="@+id/edSenhaNovamente"
            style="@style/Edit_Text"
            android:hint="Confirmar Senha"
            android:inputType="numberPassword"
            android:textColorHint="@color/cinza"
            android:drawableRight="@drawable/ic_eye"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edSenha" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Button"
            android:id="@+id/btCadastrar"
            android:text="Cadastrar"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/edSenhaNovamente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>